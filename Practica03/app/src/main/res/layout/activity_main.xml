<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-4dp"
    tools:layout_editor_absoluteY="0dp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="413dp"
        android:layout_height="758dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:background="#e4e9ef">

                <LinearLayout
                    android:layout_width="416dp"
                    android:layout_height="491dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp" />

                                <TextView
                                    android:id="@+id/tvSegundo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="0.0"
                                    android:padding="20dp"
                                    android:textAlignment="viewEnd"
                                    android:textColor="#000000"
                                    android:textColorHint="#000000"
                                    android:textSize="60sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="36dp"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonC"
                        style="@style/Widget.Material3.Button.IconButton.Outlined"
                        android:layout_width="88dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="#fe942e"
                        android:text="C"
                        android:textColor="#000000"
                        app:strokeColor="#5073ad" />

                    <Button
                        android:id="@+id/buttonCE"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#fe942e"
                        android:text="CE"
                        android:textColor="#000000"
                        app:strokeColor="#5073ad" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button7"
                        style="@style/Widget.Material3.Button.IconButton.Outlined"
                        android:layout_width="87dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="#f7f8fc"
                        android:text="7"
                        android:textColor="#5073ad"
                        android:textColorLink="#5073ad"
                        app:strokeColor="#5073ad" />

                    <Button
                        android:id="@+id/button8"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#f7f8fc"
                        android:text="8"
                        android:textColor="#5073ad"
                        app:strokeColor="#5073ad" />

                    <Button
                        android:id="@+id/button9"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#f7f8fc"
                        android:text="9"
                        android:textColor="#5073ad"
                        app:strokeColor="#5073ad" />

                    <Button
                        android:id="@+id/buttonDivision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#5073ad"
                        android:text="/" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button4"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#f7f8fc"
                        android:text="4"
                        android:textColor="#5073ad"
                        app:strokeColor="#5073ad" />

                    <Button
                        android:id="@+id/button5"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#f7f8fc"
                        android:text="5"
                        android:textColor="#5073ad"
                        app:strokeColor="#5073ad" />

                    <Button
                        android:id="@+id/button6"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#f7f8fc"
                        android:text="6"
                        android:textColor="#5073ad"
                        app:strokeColor="#5073ad" />

                    <Button
                        android:id="@+id/buttonMultiplicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#5073ad"
                        android:text="*" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button1"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#f7f8fc"
                        android:text="1"
                        android:textColor="#5073ad"
                        app:strokeColor="#5073ad" />

                    <Button
                        android:id="@+id/button2"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#f7f8fc"
                        android:text="2"
                        android:textColor="#5073ad"
                        app:strokeColor="#5073ad" />

                    <Button
                        android:id="@+id/button3"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#f7f8fc"
                        android:text="3"
                        android:textColor="#5073ad"
                        app:strokeColor="#5073ad" />

                    <Button
                        android:id="@+id/buttonResta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#5073ad"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button0"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#f7f8fc"
                        android:text="0"
                        android:textColor="#5073ad"
                        app:strokeColor="#5073ad" />

                    <Button
                        android:id="@+id/buttonPunto"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#f7f8fc"
                        android:text="."
                        android:textColor="#5073ad"
                        app:strokeColor="#5073ad" />

                    <Button
                        android:id="@+id/buttonIgual"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#fe942e"
                        android:text="="
                        android:textColor="#000000"
                        app:strokeColor="#5073ad" />

                    <Button
                        android:id="@+id/buttonSuma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#5073ad"
                        android:text="+" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="413dp"
        android:layout_height="87dp"
        android:background="#667ca9"
        android:padding="15dp"
        android:text="Calculadora"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>